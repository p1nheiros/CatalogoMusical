<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Artistas</title>
  <link rel="stylesheet" href="/css/artists.css">
</head>
<body>
  <div class="app-container">
    <header class="navbar">
      <div class="navbar-title">
        <a href="/"><img src="/image/LogoTipo.png" alt="Logo" class="logo"></a>
      </div>
      <ul class="nav-links">
        <li><a href="/">Início</a></li>
        <li><a href="/discs">Discos</a></li>
        <li><a href="/artists" class="active">Artistas</a></li>
        <li><a href="/genres">Gêneros</a></li>
      </ul>
    </header>
    <main class="main-content">
      <h1 class="page-title">Artistas Cadastrados</h1>
      <a href="/artists/add" class="btn-primary">Cadastrar Novo Artista</a>

      <% if (artistas.length > 0) { %>
        <div class="artistas-list">
          <% artistas.forEach(artista => { %>
            <div class="artista-item">
              <img src="<%= artista.foto %>" alt="Foto de <%= artista.nome %>" class="artista-foto">
              
              <h2><%= artista.nome %></h2>
              <p class="genero"><strong>Gênero:</strong> <%= artista.genero %></p>
              
              <div class="discos">
                <strong>Discos:</strong>
                <% if (artista.Discos.length > 0) { %>
                  <ul>
                    <% artista.Discos.forEach(disco => { %>
                      <li><%= disco.titulo %> (<%= disco.ano %>)</li>
                    <% }) %>
                  </ul>
                <% } else { %>
                  <p>Nenhum disco cadastrado.</p>
                <% } %>
              </div>
              
              <div class="artista-actions">
                <a href="/artists/edit/<%= artista.id %>" class="btn-edit">Editar</a>
                <form action="/artists/delete/<%= artista.id %>" method="POST" class="btn-delete-form">
                  <button type="submit" class="btn-delete">Excluir</button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="no-artistas">Nenhum artista cadastrado.</p>
      <% } %>
    </main>
  </div>
</body>
</html>
